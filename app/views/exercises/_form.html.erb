<%= form_for([current_user, @exercise], :html => { class: 'form-horizontal', role: 'form'}) do |f| %>
    <%= render 'shared/errors', obj: @exercise %>

    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :duration_in_min, 'Duration (min)' %>
      </div>
      <div class="col-md-10">
        <%= f.number_field :duration_in_min, class: 'form-control', placeholder: 'Duration of Exercise', autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :workout, 'Workout Details' %>
      </div>
      <div class="col-md-10">
        <%= f.text_area :workout,  class: 'form-control', placeholder: 'Workout Detail', rows: 10 %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :workout_date, 'Activity date' %>
      </div>
      <div class="col-md-10">
        <%= f.text_field :workout_date,  class: 'form-control', placeholder: 'Workout Detail', rows: 10 %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-1 col-md-11">
        <%= f.submit(@exercise.new_record? ? 'Add Exercise' : 'Update Exercise', class: 'btn btn-primary btn-lg pull-right') %>
      </div>
    </div>

<% end %>